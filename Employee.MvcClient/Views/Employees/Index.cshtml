@model IEnumerable<Employee>
@using Employee.MvcClient.Models

@{
    ViewData["Title"] = "EMS";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Employee Management System</h1>
    <div>
        <a asp-action="Logout" class="btn btn-danger">Logout</a>
    </div>
</div>


<div class="container">
<div class="row">

<div class="mb-3 col-8">
    <form asp-action="Index" method="get" class="form-inline">
        <div class="input-group">
            <input type="number" name="searchId" class="form-control" placeholder="Search Employee by ID" 
                   value="@Context.Request.Query["searchId"]"
                   oninput="if(this.value === '') this.form.submit();" />
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>
</div>
<div class="table-responsive col-8">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Employee ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Salary (SEK)</th>
                <th>Department ID</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.EmployeeId</td>
                        <td>@employee.FirstName</td>
                        <td>@employee.LastName</td>
                        <td>@(employee.Email ?? "N/A")</td>
                        <td>@(employee.Salary?.ToString("C") ?? "N/A")</td>
                        <td>@employee.DepartmentId</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">No employees found</td>
                </tr>
            }
        </tbody>
    </table>
</div>

        <div class="col-4 mt-3">
<div class="mb-3">
    <a asp-action="Create" class="btn btn-success w-25 p-2">Create</a>
</div>

    <div class="mb-3">
                <a asp-action="Edit" class="btn btn-primary w-25 p-2">Edit</a>
</div>

    <div class="mb-3">
                <a asp-action="Delete" class="btn btn-danger w-25 p-2">Delete</a>
</div>
</div>
             
</div>
</div>