
@model IEnumerable<global::Employee.MvcClient.Models.Employee>
@using Employee.MvcClient.Models

@{
    ViewData["Title"] = "EMS";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Employee Management System</h1>
    <div>
        <a asp-action="Logout" class="btn btn-danger">Logout</a>
    </div>
</div>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Add Employee</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Employee ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Salary</th>
                <th>Department ID</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.EmployeeId</td>
                        <td>@employee.FirstName</td>
                        <td>@employee.LastName</td>
                        <td>@(employee.Email ?? "N/A")</td>
                        <td>@(employee.Salary?.ToString("C") ?? "N/A")</td>
                        <td>@employee.DepartmentId</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@employee.EmployeeId" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@employee.EmployeeId" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">No employees found</td>
                </tr>
            }
        </tbody>
    </table>
</div>