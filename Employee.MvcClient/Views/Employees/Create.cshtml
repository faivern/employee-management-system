@model IEnumerable<Employee>
@using Employee.MvcClient.Models

@{
    ViewData["Title"] = "Add new employee";
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Add new Employee</h1>
    <div>
        <a asp-action="Logout" class="btn btn-danger">Logout</a>
    </div>
</div>


<div class="container">
    <div class="row">

        <div class="table-responsive col-8">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Employee ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Salary (SEK)</th>
                        <th>Department ID</th>
                    </tr>
                </thead>


                </tbody>
            </table>
        </div>

        <div class="col-4 mt-3">
            <div class="mb-3">
                <a asp-action="Create" class="btn btn-success w-25 p-2">Add new</a>
            </div>

            <div class="mb-3">
                <a asp-action="Edit" class="btn btn-primary w-25 p-2">Edit</a>
            </div>

            <div class="mb-3">
                <a asp-action="Delete" class="btn btn-danger w-25 p-2">Delete</a>
            </div>
        </div>

    </div>
</div>

