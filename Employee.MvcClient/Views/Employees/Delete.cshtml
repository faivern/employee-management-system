@model EmployeeViewModel
@using Employee.MvcClient.Models

@{
    ViewData["Title"] = "Delete employee";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Delete Employee</h1>
    <div>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card border-danger">
    <div class="card-body">
              <h4 class="text-danger mb-3">Are you sure you want to delete this employee?</h4>

          <dl class="row">
  <dt class="col-sm-3">Employee ID</dt>
     <dd class="col-sm-9">@Model.EmployeeId</dd>

        <dt class="col-sm-3">Name</dt>
       <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>

           <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@(Model.Email ?? "N/A")</dd>

<dt class="col-sm-3">Salary</dt>
         <dd class="col-sm-9">@(Model.Salary?.ToString("C") ?? "N/A")</dd>

         <dt class="col-sm-3">Department ID</dt>
 <dd class="col-sm-9">@Model.DepartmentId</dd>

          <dt class="col-sm-3">Department Name</dt>
     <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Department Location</dt>
    <dd class="col-sm-9">@Model.Location</dd>
          </dl>

   <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="EmployeeId" />
   <input type="hidden" asp-for="FirstName" />
     <input type="hidden" asp-for="LastName" />
     <input type="hidden" asp-for="Email" />
    <input type="hidden" asp-for="Salary" />
          <input type="hidden" asp-for="DepartmentId" />

             <button type="submit" class="btn btn-danger me-2">
           Yes, delete
      </button>
         <a asp-action="Index" class="btn btn-secondary">
  Cancel
            </a>
            </form>

     </div>
  </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
